.replease {
  padding: 20rpx 30rpx;
  background-color: #fff;
}
.replease .form-cell {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  position: relative;
}
.replease .form-cell .uni-forms-item {
  width: 100%;
  align-items: center;
  margin-bottom: 0;
}
.replease .form-cell .uni-forms-item .uni-forms-item__content {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.replease .form-cell .uni-forms-item .uni-forms-item__content input {
  text-align: right;
  padding: 0 10rpx;
  width: 90%;
}
.replease .form-cell .uni-forms-item .uni-forms-item__content input.uni-numbox__value {
  text-align: center;
  width: 90rpx;
}
.replease .form-cell .uni-forms-item .uni-forms-item__content .uni-forms-item__error {
  top: -50%;
  right: 0;
  left: auto;
}
.replease .form-cell .uni-forms-item .uni-forms-item__content .u-radio-group {
  justify-content: flex-end;
}
.replease .form-cell .uni-forms-item .uni-forms-item__content .u-radio-group .u-radio {
  margin: 0 5rpx;
}
.replease .form-cell .u-switch {
  margin-left: 10rpx;
}
.replease .form-cell .label {
  flex: 1;
  color: var(--fcolor);
  font-size: 24rpx;
}
.replease .form-cell .label.tip {
  font-weight: bold;
  font-size: 28rpx;
}
.replease .form-cell .item {
  font-size: 24rpx;
}
.replease button {
  margin-top: 40rpx;
  background-color: var(--tc);
}

