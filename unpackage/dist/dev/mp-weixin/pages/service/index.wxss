.work .head {
  background-color: var(--theam-color);
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  box-sizing: content-box;
}
.work .head.mine {
  background: linear-gradient(to bottom, var(--theam-color), #fff);
  padding-bottom: 20px;
  flex-direction: column;
  padding-left: 0;
  align-items: flex-start;
  box-sizing: border-box;
}
.work .head.mine .info {
  display: flex;
  align-items: center;
  margin: 0 0 30rpx 30rpx;
}
.work .head .logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.work .head .title {
  margin-left: 10rpx;
  color: #333;
  display: flex;
  flex-direction: column;
}
.work .head .title .h1 {
  font-size: 36rpx;
}
.work .head .title .txt {
  font-size: 24rpx;
  margin-top: 4rpx;
}
.work .head.fixed {
  position: fixed;
  z-index: 3;
  top: 0;
  width: 100%;
  left: 0;
  transition: all .4s;
}
.work .head.fixed .logo, .work .head.fixed .title {
  display: none;
}
.work .top-bar {
  height: 100rpx;
  display: flex;
  align-items: center;
  width: 100%;
  background-color: var(--theam-color);
}
.work .top-bar .content {
  height: 90rpx;
  width: calc(100% - 36rpx);
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.work .top-bar.fixed {
  position: fixed;
  z-index: 3;
}
.work .top-bar .position {
  flex: 0.8;
  box-sizing: border-box;
}
.work .top-bar .position.service {
  flex: 0.6;
}
.work .top-bar .search {
  flex: 1.4;
  height: 78rpx;
  border-radius: 44rpx;
  background-color: #fff8c8;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: var(--fcolor);
  box-sizing: border-box;
}
.work .top-bar .search .van-icon {
  font-size: 36rpx !important;
  margin-right: 8rpx;
}
.work .top-bar .qiuzhi {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  flex: 0.8;
}
.work .top-bar .qiuzhi .lingdang {
  width: 32rpx;
  height: 32rpx;
  margin: 0 8rpx;
}
.work .top-bar .qiuzhi .yx {
  color: var(--fcolor);
  font-size: 32rpx;
  display: flex;
  align-items: center;
}
.work .top-bar .qiuzhi.fixed {
  opacity: 0;
}
.work.service .top-bar.fixed {
  -webkit-transform: all .4s;
          transform: all .4s;
}
.work.service .top-bar.fixed .content {
  justify-content: flex-start;
}
.work .main {
  padding: 20rpx 30rpx;
  position: relative;
}
.work .main .fillters {
  display: flex;
  height: 80rpx;
  align-items: center;
  justify-content: space-between;
}
.work .main .fillters.fixed {
  position: fixed;
  width: calc(100% - 58rpx);
  left: 30rpx;
  background-color: #EFEFEF;
  z-index: 2;
}
.work .main .fillters .left {
  display: flex;
  align-items: center;
}
.work .main .fillters .left view {
  color: #888;
  padding: 6rpx 0;
  position: relative;
}
.work .main .fillters .left view.active {
  color: var(--fcolor);
  font-weight: bold;
}
.work .main .fillters .left view.active::after {
  position: absolute;
  content: "";
  display: block;
  bottom: 0;
  left: 0;
  height: 2rpx;
  background: var(--theam-color);
  width: 100%;
}
.work .main .fillters .left view + view {
  margin-left: 20rpx;
}

